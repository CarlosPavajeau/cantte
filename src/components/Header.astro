---
import ThemeToggle from './ThemeToggle.astro'
---

<header
  class="fixed w-full bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm z-50"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center">
        <a
          href="/"
          class="text-2xl font-bold text-black dark:text-white"
        >
          Cantte
        </a>
      </div>

      <nav class="hidden md:flex space-x-8">
        <a
          href="#services"
          class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400"
        >
          Servicios
        </a>
        <a
          href="#portfolio"
          class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400"
        >
          Portafolio
        </a>
        <a
          href="#process"
          class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400"
        >
          Proceso
        </a>
        <a
          href="#team"
          class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400"
        >
          Equipo
        </a>
        <a
          href="#contact"
          class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400"
        >
          Contacto
        </a>
      </nav>

      <div class="flex items-center space-x-4">
        <ThemeToggle />
        <a
          href="#contact"
          class="bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 rounded-lg transition-colors duration-300"
        >
          Empezar ahora
        </a>
      </div>
    </div>
  </div>
</header>
