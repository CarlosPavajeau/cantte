---
const services = [
  {
    icon: 'web',
    title: 'Desarrollo web',
    description:
      'Aplicaciones web personalizadas creadas con marcos de trabajo modernos y las mejores prácticas. Desde sitios web sencillos hasta soluciones empresariales complejas.',
    features: [
      'React & Next.js',
      'Progressive Web Apps',
      'Astro',
      'Angular',
      'APIs REST',
    ],
  },
  {
    icon: 'mobile',
    title: 'Desarrollo móvil',
    description:
      'Aplicaciones móviles nativas y multiplataforma que ofrecen experiencias de usuario excepcionales en todos los dispositivos.',
    features: ['iOS & Android', 'React Native'],
  },
  {
    icon: 'cloud',
    title: 'Soluciones en la nube',
    description:
      'Infraestructura y servicios en la nube escalables que potencian sus aplicaciones con fiabilidad y rendimiento.',
    features: [
      'AWS, Azure & GCP',
      'Migraciones a la nube',
      'DevOps',
      'Microservicios',
    ],
  },
  {
    icon: 'consulting',
    title: 'Consultoría',
    description:
      'Consultoría tecnológica estratégica para ayudarle a tomar decisiones con conocimiento de causa y alcanzar sus objetivos empresariales.',
    features: [
      'Diseño de arquitectura',
      'Auditoría de seguridad',
      'Optimización de rendimiento',
    ],
  },
]
---

<section id="services" class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16" data-aos="fade-up">
      <h2
        class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4"
      >
        Nuestros servicios
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Ofrecemos servicios integrales de desarrollo de software para dar vida a
        sus ideas
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        services.map((service, index) => (
          <div
            class="bg-white dark:bg-gray-900 rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <div class="w-14 h-14 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center mb-6">
              {service.icon === "web" && (
                <svg
                  class="w-8 h-8 text-primary-600 dark:text-primary-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                  />
                </svg>
              )}
              {service.icon === "mobile" && (
                <svg
                  class="w-8 h-8 text-primary-600 dark:text-primary-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                  />
                </svg>
              )}
              {service.icon === "cloud" && (
                <svg
                  class="w-8 h-8 text-primary-600 dark:text-primary-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"
                  />
                </svg>
              )}
              {service.icon === "consulting" && (
                <svg
                  class="w-8 h-8 text-primary-600 dark:text-primary-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                  />
                </svg>
              )}
            </div>

            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
              {service.title}
            </h3>

            <p class="text-gray-600 dark:text-gray-300 mb-6">
              {service.description}
            </p>

            <ul class="space-y-2">
              {service.features.map((feature) => (
                <li class="flex items-center text-gray-600 dark:text-gray-300">
                  <svg
                    class="w-5 h-5 text-primary-600 dark:text-primary-400 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>
